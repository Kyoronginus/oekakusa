{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:window:allow-create",
    "core:webview:allow-create-webview-window",
    "shell:allow-open",
    "opener:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "**" }]
    }
  ]
}
